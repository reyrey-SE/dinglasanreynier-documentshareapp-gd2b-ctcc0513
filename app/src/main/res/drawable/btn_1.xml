<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Normal State -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:type="linear"
                android:startColor="#1976D2"
            android:endColor="#0D47A1"
            android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#BBDEFB" />
        </shape>
    </item>

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:type="linear"
                android:startColor="#1565C0"
            android:endColor="#0B3E91"
            android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#90CAF9" />
        </shape>
    </item>

    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#B0BEC5" />
            <stroke
                android:width="2dp"
                android:color="#CFD8DC" />
        </shape>
    </item>

</selector>
